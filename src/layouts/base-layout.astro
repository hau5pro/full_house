---
import "../styles/global.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/500.css";
import "@fontsource/boogaloo/400.css";
import { ClientRouter } from "astro:transitions";
import { getCollection } from "astro:content";
import Search from "astro-pagefind/components/Search";
import { UNCATEGORIZED, sortCategories } from "../infrastructure/constants";

const { title, description } = Astro.props;

const allRecipes = await getCollection("recipes");
const categories = sortCategories([
  ...new Set(
    allRecipes.map((r) =>
      r.id.includes("/") ? r.id.split("/")[0] : UNCATEGORIZED,
    ),
  ),
]);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://cookbookcdn.hau5.pro" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <ClientRouter />
  </head>
  <body>
    <header class="site-header" transition:persist>
      <div class="container">
        <div class="header-content">
          <a href="/" class="logo" aria-label="Full House home">
            <svg class="logo-icon" viewBox="0 0 64 64" aria-hidden="true">
              <path
                d="M32 8 L4 32 L14 32 L14 56 L50 56 L50 32 L60 32 Z"
                fill="url(#house-grad)"></path>
              <defs>
                <linearGradient id="house-grad" x1="0" y1="0" x2="1" y2="1">
                  <stop offset="0%" stop-color="var(--accent)"></stop>
                  <stop offset="100%" stop-color="#9b7eea"></stop>
                </linearGradient>
              </defs>
            </svg>
            <span class="logo-text">Full House</span>
          </a>
          <nav class="main-nav">
            {
              categories.map((category) => (
                <a href={`/#${category}`} class="cat-link">
                  {category}
                </a>
              ))
            }
          </nav>
          <div class="header-search">
            <Search
              id="search"
              className="pagefind-ui"
              uiOptions={{
                showSubResults: false,
                showImages: true,
                showEmptyFilters: false,
                excerptLength: 20,
              }}
            />
          </div>
        </div>
      </div>
    </header>

    <main transition:name="main-content">
      <slot />
    </main>

    <footer>
      <p>Just recipes. You're welcome.</p>
    </footer>
    <script src="../scripts/search.ts"></script>
  </body>
</html>
