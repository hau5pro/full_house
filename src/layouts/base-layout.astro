---
import "../styles/global.css";
import { getCollection } from "astro:content";
import Search from "astro-pagefind/components/Search";
import { UNCATEGORIZED } from "../infrastructure/constants";

const { title, description } = Astro.props;

const allRecipes = await getCollection("recipes");
const categories = [
  ...new Set(
    allRecipes.map((r) => (r.id.includes("/") ? r.id.split("/")[0] : UNCATEGORIZED))
  ),
].sort();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="header-content">
          <a href="/" class="logo">
            <svg class="logo-icon" viewBox="0 0 64 64" aria-hidden="true">
              <path d="M32 8 L4 32 L14 32 L14 56 L50 56 L50 32 L60 32 Z" fill="url(#house-grad)" />
              <defs>
                <linearGradient id="house-grad" x1="0" y1="0" x2="1" y2="1">
                  <stop offset="0%" stop-color="var(--accent)" />
                  <stop offset="100%" stop-color="#9b7eea" />
                </linearGradient>
              </defs>
            </svg>
            <span class="logo-text">Full House</span>
          </a>
          <div class="header-right">
            <nav class="main-nav">
              {categories.map((category) => (
                <a href={`/#${category}`} class="cat-link">{category}</a>
              ))}
            </nav>
            <div class="header-search">
              <Search id="search" className="pagefind-ui" uiOptions={{ showSubResults: false, showImages: true, showEmptyFilters: false, excerptLength: 20 }} />
            </div>
          </div>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>A Full House Production</p>
    </footer>
    <script>
      const ACTIVE_CLASS = "pagefind-ui__result--active";

      function getInput() {
        return document.querySelector<HTMLInputElement>(".pagefind-ui__search-input");
      }

      function getResults() {
        return Array.from(document.querySelectorAll<HTMLElement>(".pagefind-ui__result"));
      }

      function getActiveIndex(results: HTMLElement[]) {
        return results.findIndex((r) => r.classList.contains(ACTIVE_CLASS));
      }

      function setActive(results: HTMLElement[], index: number) {
        results.forEach((r) => r.classList.remove(ACTIVE_CLASS));
        if (index >= 0 && index < results.length) {
          results[index].classList.add(ACTIVE_CLASS);
          results[index].scrollIntoView({ block: "nearest" });
        }
      }

      const isMac = navigator.platform.toUpperCase().includes("MAC");
      const input = getInput();
      if (input) input.placeholder = isMac ? "âŒ˜K" : "Ctrl+K";

      document.addEventListener("keydown", (e) => {
        const input = getInput();
        if (!input) return;

        // Ctrl+K / Cmd+K to focus search
        if ((e.ctrlKey || e.metaKey) && e.key === "k") {
          e.preventDefault();
          input.focus();
          return;
        }

        // Only handle remaining shortcuts when search is focused
        if (!document.activeElement || !input.closest(".header-search")?.contains(document.activeElement)) {
          // Allow arrow keys / enter / escape only if input is focused
          if (document.activeElement !== input) return;
        }

        const results = getResults();
        const active = getActiveIndex(results);

        if (e.key === "ArrowDown") {
          e.preventDefault();
          setActive(results, Math.min(active + 1, results.length - 1));
        } else if (e.key === "ArrowUp") {
          e.preventDefault();
          setActive(results, Math.max(active - 1, 0));
        } else if (e.key === "Enter" && active >= 0) {
          e.preventDefault();
          const link = results[active].querySelector<HTMLAnchorElement>(".pagefind-ui__result-link");
          if (link) window.location.href = link.href;
        } else if (e.key === "Escape") {
          e.preventDefault();
          const clear = document.querySelector<HTMLButtonElement>(".pagefind-ui__search-clear");
          if (clear) clear.click();
          input.blur();
        }
      });
    </script>
  </body>
</html>
