---
interface Props {
  servingSize?: string;
  calories?: number;
  protein?: string;
  carbs?: string;
  fat?: string;
}

const { servingSize, calories, protein, carbs, fat } = Astro.props;
---

<div class="nutrition-card">
  <div class="nutrition-header">Nutrition Facts</div>
  {servingSize && (
    <div class="nutrition-row nutrition-serving">
      <span>Serving size</span>
      <span class="nutrition-serving-value">{servingSize}</span>
    </div>
  )}
  {calories != null && (
    <>
      <div class="nutrition-divider-thick" />
      <div class="nutrition-row nutrition-calories">
        <span>Calories</span>
        <span class="calories-value">{calories}</span>
      </div>
    </>
  )}
  {fat && (
    <>
      <div class="nutrition-divider" />
      <div class="nutrition-row">
        <span>Total Fat</span>
        <span>{fat}</span>
      </div>
    </>
  )}
  {carbs && (
    <>
      <div class="nutrition-divider" />
      <div class="nutrition-row">
        <span>Total Carbs</span>
        <span>{carbs}</span>
      </div>
    </>
  )}
  {protein && (
    <>
      <div class="nutrition-divider" />
      <div class="nutrition-row">
        <span>Protein</span>
        <span>{protein}</span>
      </div>
    </>
  )}
</div>
